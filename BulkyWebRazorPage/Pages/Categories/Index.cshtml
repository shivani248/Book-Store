@page
@model BulkyWebRazorPage.Pages.Categories.IndexModel

<div class="container">
	<div class="row p-4 pb-3">
		<div class=" col-6">
			<h1>Category List</h1>
		</div>
		<div class="col-6 text-end">
			<a asp-page="/categories/create" class="btn btn-primary">
				Create New Item <i class="bi bi-plus-circle"></i>
			</a>
		</div>
	</div>

	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>Category Name</th>
				<th>Display Order</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
			{
				<tr>
					<td>@obj.Name</td>
					<td>@obj.DisplayOrder</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-page="/categories/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
								<i class="bi bi-pencil"></i>Edit
							</a>
							<a asp-page="/categories/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
								<i class="bi bi-trash3"></i>Delete
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>